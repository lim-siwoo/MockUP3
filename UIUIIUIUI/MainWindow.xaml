<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="UIUIIUIUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UIUIIUIUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="UIUIIUIUI">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock x:Name="AppTitleTextBlock" 
                       Text="엣지 디바이스 배포 확인 프로그램" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>

            <Grid RowSpacing="8" ColumnSpacing="12" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 버전 정보 -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="현재 버전:" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>
                <Border Grid.Row="0" Grid.Column="1" 
                        Background="{ThemeResource SystemAccentColor}" 
                        CornerRadius="8" 
                        Padding="12,8">
                    <TextBlock x:Name="VersionTextBlock" 
                               Text="1.0.0" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                </Border>

                <!-- 배포 시간 -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="배포 시간:" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           x:Name="DeploymentTimeTextBlock" 
                           Text="2025-05-16 14:30:00" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>

                <!-- 디바이스 ID -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="디바이스 ID:" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="1" 
                           x:Name="DeviceIdTextBlock" 
                           Text="EDGE-DEVICE-001" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>

                <!-- 배포 상태 -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="배포 상태:" 
                           FontSize="20" 
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Border x:Name="StatusIndicator" 
                            Width="24" 
                            Height="24" 
                            CornerRadius="12" 
                            Background="LimeGreen" 
                            VerticalAlignment="Center"/>
                    <TextBlock x:Name="DeploymentStatusTextBlock" 
                               Text="성공" 
                               FontSize="20" 
                               Foreground="LimeGreen" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Border Background="#f0f0f0" 
                    BorderBrush="#d0d0d0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="16" 
                    Margin="0,20,0,0">
                <StackPanel Spacing="4">
                    <TextBlock Text="변경 내역:" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="Black"/>
                    <TextBlock x:Name="ChangelogTextBlock" 
                               Text="• 보안 업데이트 적용&#x0A;• UI 성능 개선&#x0A;• 배터리 소모량 최적화&#x0A;• 네트워크 연결 안정성 향상" 
                               FontSize="16" 
                               TextWrapping="Wrap"
                               Foreground="Black"/>
                </StackPanel>
            </Border>

            <Button x:Name="RefreshButton" 
                    Content="새로고침" 
                    HorizontalAlignment="Center" 
                    Padding="20,8" 
                    FontSize="16"
                    Click="RefreshButton_Click"/>
        </StackPanel>

        <!-- 새 버전 알림 팝업 -->
        <Grid x:Name="NewVersionNotification" 
              Background="{ThemeResource SystemAccentColorDark1}" 
              VerticalAlignment="Bottom" 
              HorizontalAlignment="Stretch" 
              Height="80" 
              Padding="20,0" 
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        Spacing="12">
                <FontIcon Glyph="&#xE789;" 
                          FontSize="24" 
                          Foreground="White"/>
                <TextBlock Text="새 버전이 성공적으로 배포되었습니다!" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" 
                    Content="확인" 
                    Background="White" 
                    Foreground="{ThemeResource SystemAccentColorDark1}" 
                    VerticalAlignment="Center"
                    Click="DismissNotification_Click"/>
        </Grid>
    </Grid>
</Window>
